{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "dist",
        "lib": ["es6", "dom"],
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "admin",
        "shared",
        "block",
        "app.constant.ts"
    ],
    "exclude": [
        "dist"
    ]
}
